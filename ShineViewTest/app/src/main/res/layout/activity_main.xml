<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="arttodeath.shineviewtest.MainActivity">

    <arttodeath.shineviewtest.ShineView
        android:id="@+id/shine_view_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:roundRadius="10dp"
        app:backgroundColor="#e43d55ee"
        app:foregroundColor="#a7652041"/>

    <arttodeath.shineviewtest.ShineView
        android:id="@+id/shine_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:roundRadius="8dp"
        app:backgroundColor="@color/shineViewBackground"
        app:foregroundColor="@color/shineViewForeground"/>

    <arttodeath.shineviewtest.ShineView
        android:id="@+id/shine_view_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:roundRadius="4dp"
        app:backgroundColor="#e44fee3d"
        app:foregroundColor="#7d652041"/>
</LinearLayout>
